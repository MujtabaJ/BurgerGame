<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Games1D.burger.LevelsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">

        <LinearLayout
            android:id="@+id/layout_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bun_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_top_bun" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bun_image"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="BURGER MAKER"
                android:textColor="#FFF"
                android:textSize="4mm"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_title_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_title"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="AND"
                android:textColor="#FFF"
                android:textSize="3mm" />

            <TextView
                android:id="@+id/app_title_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_title_and"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="BUILDING MAKER"
                android:textColor="#FFF"
                android:textSize="4mm"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_buttons1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_logo"
                android:orientation="horizontal">

                <Button
                    android:layout_gravity="bottom"
                    android:id="@+id/level1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/level_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buttons2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_logo"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/level2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buttons3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_logo"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/level3"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/level_3" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>